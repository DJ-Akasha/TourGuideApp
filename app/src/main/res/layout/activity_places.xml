<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.android.tourguide.PlacesActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/colorPrimaryLight"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/image_activity_places"
            android:layout_width="@dimen/activity_places_image"
            android:layout_height="@dimen/activity_places_image"
            android:layout_gravity="center"
            android:adjustViewBounds="true"
            android:scaleType="fitEnd" />

        <TextView
            android:id="@+id/place_names_activity_places"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/margin_16"
            android:textColor="@color/primaryTextColor"
            android:textSize="30sp" />

        <TextView
            android:id="@+id/blurb_activity_places"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/margin_16"
            android:textColor="@color/secondaryTextColor"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/days_open_activity_places"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/margin_16"
            android:textColor="@color/secondaryTextColor"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/location_address"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/margin_16"
            android:textColor="@color/secondaryTextColor"
            android:textSize="14sp" />
    </LinearLayout>
</ScrollView>
